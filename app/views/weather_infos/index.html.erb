<h3 align="center">Weather API</h3>
<br>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th scope="row">1</th>
      <td>
        <%= button_to 'The temperature is now',
                      '/api/v1/weather/current',
                      method: :get %>
      </td>
    </tr>
    <tr>
      <th scope="row">2</th>
      <td>
        <%= button_to 'Information for the last 24h',
                      '/api/v1/weather/historical',
                      method: :get %>
      </td>
    </tr>
    <tr>
      <th scope="row">3</th>
      <td>
        <%= button_to 'Max temperature in the last 24h',
                      '/api/v1/weather/historical/max',
                      method: :get %>
      </td>
    </tr>
    <tr>
      <th scope="row">4</th>
      <td>
        <%= button_to 'Min temperature in the last 24h',
                      '/api/v1/weather/historical/min',
                      method: :get %>
      </td>
    </tr>
    <tr>
      <th scope="row">5</th>
      <td>
        <%= button_to 'Avg temperature in the last 24h',
                      '/api/v1/weather/historical/avg',
                      method: :get %>
      </td>
    </tr>
    <tr>
      <th scope="row">6</th>
      <td>
        <%= button_to 'Backend status',
                      '/api/v1/health',
                      method: :get %>
      </td>
    </tr>
    <tr>
      <th scope="row">7</th>
      <td>
        <%= button_to 'Documentation',
                      '/api/v1/docs',
                      method: :get %>
      </td>
    </tr>
  </tbody>

</table>
